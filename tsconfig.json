{
    "compilerOptions": {
        "alwaysStrict": true,
        "allowSyntheticDefaultImports": true,
        "allowUnreachableCode": false,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react",
        "jsxFactory": "h",
        "outDir": "./build",
        "lib": [
            "dom",
            "es7",
            "scripthost",
            "es2015"
        ],
        "module": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": false,
        "noUnusedParameters": true,
        "target": "esnext",
        "sourceMap": true,
        "noFallthroughCasesInSwitch": true,
        "resolveJsonModule": true,
        "strictNullChecks": true,
        "noEmitOnError": true,
        "baseUrl": ".",
        "plugins": [{ "name": "typescript-plugin-css-modules" }],
        "typeRoots": [
            "./node_modules/@types"
        ],
        "paths": {
            "@public/*": [
                "./public/*"
            ],
            "@pages/*": [
                "./src/pages/*"
            ],
            "@components/*": [
                "./src/components/*"
            ],
            "@server/*": [
                "./server/*"
            ],
            "@source/*": [
                "./src/*"
            ],
            "@utilities/*": [
                "./src/utilities/*"
            ],
            "@services/*": [
                "./src/services/*"
            ],
            "@styles/*": [
                "./src/styles/*"
            ],
            "@store/*": [
                "./src/store/*"
            ],
            "@/*": [
                "./src/*"
            ]
        }
    },
    "include": ["src"]
}
