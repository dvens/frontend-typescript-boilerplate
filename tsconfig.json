{
    "compilerOptions": {
        "allowJs": true,
        "alwaysStrict": true,
        "allowSyntheticDefaultImports": true,
        "allowUnreachableCode": false,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react",
        "jsxFactory": "h",
        "lib": [
            "dom",
            "es7",
            "scripthost",
            "es2015"
        ],
        "module": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": false,
        "noUnusedParameters": true,
        "target": "esnext",
        "sourceMap": true,
        "noFallthroughCasesInSwitch": true,
        "resolveJsonModule": true,
        "strictNullChecks": true,
        "noEmitOnError": true,
        "baseUrl": ".",
        "plugins": [{ "name": "typescript-plugin-css-modules" }],
        "typeRoots": [
            "./node_modules/@types",
            "./types"
        ],
        "paths": {
            "@public/*": [
                "./public/*"
            ],
            "@pages/*": [
                "./src/pages/*"
            ],
            "@server/*": [
                "./server/*"
            ],
            "@source/*": [
                "./src/*"
            ],
            "@utilities/*": [
                "./src/utilities/*"
            ],
            "@services/*": [
                "./src/services/*"
            ],
            "@store/*": [
                "./src/store/*"
            ],
            "@/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "types/**/*"
    ],
    "exclude": [
        "node_modules",
        "tools/**/*.*",
        "config/**/*.*",
        "**/*.test.ts",
        ".storybook/**/*.*",
    ]
}
