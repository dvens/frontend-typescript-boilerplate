{
    "name": "frontend-setup",
    "version": "0.5.0",
    "license": "MIT",
    "description": "A basic project setup for creating (static) html templates. Filled with automated tasks and configuration options.",
    "author": "Dylan Vens",
    "scripts": {
        "lint-fix": "eslint src/ --ext .ts,.tsx --fix",
        "start": "dev-scripts start",
        "build": "cross-env NODE_ENV=production TS_NODE_PROJECT=tsconfig.tooling.json ts-node ./tools/scripts/run build",
        "serve:build": "cross-env NODE_ENV=production ts-node --transpile-only --files ./build/server/server.js",
        "storybook": "start-storybook -p 9001",
        "storybook:build": "cross-env NODE_ENV=production build-storybook -o ./build/styleguide -s storybook-static",
        "test": "karma start karma.conf.js",
        "generate": "hygen generator"
    },
    "contributors": [
        {
            "name": "Dylan Vens",
            "email": "dylan.vens@deptagency.com"
        }
    ],
    "engines": {
        "node": ">=10.18.1",
        "yarn": "^1.22.0"
    },
    "private": true,
    "repository": {
        "type": "git",
        "url": "https://bitbucket.org/tamtam-nl/tamtam-frontend-setup"
    },
    "devDependencies": {
        "@dev-scripts/cli": "^0.2.0",
        "@dev-scripts/webpack": "^0.2.0",
        "@types/compression": "^1.7.0",
        "@types/cors": "^2.8.10",
        "@types/morgan": "^1.9.2",
        "@types/serialize-javascript": "^5.0.0"
    },
    "dependencies": {
        "@atomify/css": "^1.2.4",
        "@atomify/hooks": "^1.3.4",
        "@atomify/jsx": "^2.1.11",
        "@atomify/kit": "^1.3.12",
        "chalk": "^3.0.0",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "morgan": "^1.9.1"
    }
}
